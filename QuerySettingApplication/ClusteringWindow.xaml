<Window x:Class="QuerySettingApplication.ClusteringWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
        Title="Clustering window" Name="ClWin" Height="478" Width="695" Icon="Resource/rdf-128.png"
        DataContext="{Binding RelativeSource={RelativeSource Self}}" ResizeMode="NoResize">
    <Grid>
        <GroupBox Header="Команды" HorizontalAlignment="Left" Height="Auto" VerticalAlignment="Top" Width="Auto" Margin="10,10,0,0">
            <Grid>
                <Button Name="InitializeButton" Content="Initialize" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="80" Margin="10,10,0,0" Click="InitializeButton_OnClick"/>
                <TextBox Name="NumInOneClusterText" HorizontalAlignment="Left" Height="25" Margin="95,10,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="79"/>
                <GroupBox Header="Огрубление" HorizontalAlignment="Left" Height="Auto" VerticalAlignment="Top" Width="Auto" Margin="0,40,0,0">
                    <Grid>
                        <Button Content="SSG" Name="SSG" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="80" Margin="10,10,0,0" Click="SSG_OnClick"/>
                        <Button Content="MSG" Name="MSG" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="80" Margin="10,40,0,0" IsEnabled="False"/>
                        <TextBox HorizontalAlignment="Left" Height="25" Margin="95,40,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="79"/>
                    </Grid>
                </GroupBox>
                <GroupBox Header="Уточнение" HorizontalAlignment="Left" Height="Auto" VerticalAlignment="Top" Width="Auto" Margin="0,128,0,0">
                    <Grid>
                        <Button Content="CG" Name="RefCG" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="80" Margin="10,10,0,0" Click="RefCG_OnClick"/>
                        <Button Content="FG" Name="RefFG" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="80" Margin="95,10,0,0" IsEnabled="False"/>
                        <Button Content="AKL" Name="RefAKL" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="80" Margin="10,40,0,0" IsEnabled="False"/>
                        <Button Content="MLR" Name="RefMLR" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="80" Margin="95,40,0,0" IsEnabled="False"/>
                    </Grid>
                </GroupBox>
            </Grid>
        </GroupBox>
        <TextBlock HorizontalAlignment="Left" Height="25" Margin="214,11,0,0" TextWrapping="Wrap" Text="Значение модулярности для текущей кластеризации:" VerticalAlignment="Top" Width="Auto"/>
        <TextBlock HorizontalAlignment="Left" Name="ModularityValue" Height="25" Margin="513,11,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="Auto" 
                   Text="{Binding Path=ModularityText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <TreeView Name="ClusterTree" HorizontalAlignment="Left" Height="403" Margin="214,35,0,0" VerticalAlignment="Top" Width="463" 
                  ItemsSource="{Binding Path=TreeItems,  UpdateSourceTrigger=PropertyChanged}"  MouseDoubleClick="ClusterTree_OnMouseDoubleClick"/>
        <CheckBox Content="Использовать спирали" HorizontalAlignment="Left" Margin="10,254,0,0" VerticalAlignment="Top" Name="UseSpiral"/>
        <Button Content="Нарисовать в браузере" HorizontalAlignment="Left" Height="25" Margin="10,275,0,0" VerticalAlignment="Top" Width="199" Click="DrawInBrowser_OnClick"/>
    </Grid>
</Window>
