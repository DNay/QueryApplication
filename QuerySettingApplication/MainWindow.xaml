<Window x:Class="QuerySettingApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Query setting window" Name="QueryMainWindow" DataContext="{Binding ElementName=QueryMainWindow}" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize" Icon="Resource/rdf-128.png">
    <TabControl Height="Auto" Width="Auto">
        <TabItem Header="Сеть цитирования">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Button Grid.Row="0" Grid.Column="0" Content="Сохранить в файл" HorizontalAlignment="Left" Height="25" Width="112" Click="Save_Click" Margin="117,0,0,0"/>
                <Button Grid.Row="0" Grid.Column="0" Content="Загрузить из файла" HorizontalAlignment="Left" Height="25" Width="112" Click="Load_Click"/>

                <Button Grid.Row="3" Grid.Column="0" Content="Кластеризация и отрисовка" Name="ClusterButton" Height="Auto" HorizontalAlignment="Left" Click="Cluster_Click" IsEnabled="{Binding Path=IsClusteringEnabled}"/>

                <GroupBox Grid.Row="2" Grid.Column="0" Header="Граф" Height="Auto" Width="Auto">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Grid.Column="0" Content="№ вершин: " />
                        <Label Grid.Row="0" Grid.Column="1" Name="NumVertexes" Content="{Binding Path=NumVertexesProp}" />
                        <Label Grid.Row="1" Grid.Column="0" Content="№ ребер: " />
                        <Label Grid.Row="1" Grid.Column="1" Name="NumEdges" Content="{Binding Path=NumEdgesProp}" />
                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="2" Grid.Column="1" Header="Server" Height="Auto" Width="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Name="ServerStatus" Content="Fuseki server is OFF" HorizontalAlignment="Left" />
                        <Button Grid.Row="1" Content="Start server" HorizontalAlignment="Left" Click="Fuseki_Button_Click" />
                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Header="Концигурация запроса" Height="Auto" Width="Auto">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="240" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBox Grid.Row="0" Grid.Column="1" Name="EntityTextBox" TextWrapping="NoWrap" Text="{Binding Path=CurrentEntityProp}" />
                        <Label Grid.Row="0" Grid.Column="0" Content="Текущая сущность" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="Auto"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Name="MaxVertCount" TextWrapping="NoWrap" Text="{Binding Path=MaxVertCountProp}" />
                        <Label Grid.Row="1" Grid.Column="0" Content="Ограничение количества вершин" HorizontalAlignment="Left" Height="Auto" Width="Auto"/>
                        <ProgressBar Grid.Row="2" Grid.Column="0" Visibility="Hidden" />
                        <Button Grid.Row="2" Grid.Column="1" Content="Извлечь сеть" Name="StartProcess" HorizontalAlignment="Right" Click="Start_Button_Click" IsEnabled="True" Margin="0,2,0,0" />
                    </Grid>
                </GroupBox>
            </Grid>
        </TabItem>
        <TabItem Header="Граф соавторов">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    
                    <Button Grid.Row="0" Content="Извлечь на основе сети цитирований" Height="25" Width="Auto" Click="Authors_Click" Margin="1,1,1,1"/>
                    <!--<ProgressBar Grid.Row="1" Name="ProgressBarAuth" >
                    </ProgressBar>-->
                </Grid>

                <Button Grid.Row="0" Grid.Column="1" Content="Сохранить в файл" HorizontalAlignment="Left" Height="25" Width="112" Click="SaveAuth_Click" Margin="2" />
                <Button Grid.Row="0" Grid.Column="0" Content="Загрузить из файла" HorizontalAlignment="Left" Height="25" Width="112" Click="LoadAuth_Click" Margin="2"/>

                <Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="2" Content="Кластеризация и отрисовка" Name="ClusterButtonAuth" Height="Auto" HorizontalAlignment="Left" Click="ClusterAuth_Click" IsEnabled="{Binding Path=IsClusteringAuthEnabled}"/>

                <GroupBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Header="Граф" Height="Auto" Width="Auto">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Grid.Column="0" Content="№ вершин: " />
                        <Label Grid.Row="0" Grid.Column="1" Name="NumVertexesAuth" Content="{Binding Path=NumVertexesAuthProp}" />
                        <Label Grid.Row="1" Grid.Column="0" Content="№ ребер: " />
                        <Label Grid.Row="1" Grid.Column="1" Name="NumEdgesAuth" Content="{Binding Path=NumEdgesAuthProp}" />
                    </Grid>
                </GroupBox>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
